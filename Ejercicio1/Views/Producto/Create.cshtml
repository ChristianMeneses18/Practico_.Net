@model Ejercicio1.Models.Producto
@{
    var categorias = ViewBag.Categorias as List<Ejercicio1.Models.Categoria>;
}

<div class="container">
    <div class="card">
        <div class="card-content">
            <span class="card-title blue-text text-darken-2">Crear Producto</span>

            <form asp-action="Create" class="col s12">
                <div class="input-field">
                    <input asp-for="Nombre" id="nombre" type="text" class="validate" />
                    <label for="nombre">Nombre</label>
                    <span asp-validation-for="Nombre" class="red-text text-darken-1"></span>
                </div>

                <div class="input-field">
                    <input asp-for="Precio" id="precio" type="number" step="0.01" class="validate" />
                    <label for="precio">Precio</label>
                    <span asp-validation-for="Precio" class="red-text text-darken-1"></span>
                </div>

                <div class="input-field">
                    <input asp-for="FechaAlta" id="fechaAlta" type="date" class="validate" />
                    <label for="fechaAlta">Fecha Alta</label>
                    <span asp-validation-for="FechaAlta" class="red-text text-darken-1"></span>
                </div>


                <div class="input-field">
                    <select asp-for="CategoriaId" class="browser-default">
                        <option value="">Seleccione</option>
                        @foreach (var cat in categorias)
                        {
                            <option value="@cat.Id">@cat.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="CategoriaId" class="red-text text-darken-1"></span>
                </div>

                <button type="submit" class="btn blue darken-2">Guardar</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('select');
        M.FormSelect.init(elems);
    });
</script>
