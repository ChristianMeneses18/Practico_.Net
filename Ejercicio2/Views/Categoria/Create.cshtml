@model Ejercicio2.Models.Categoria

<div class="container">
    <div class="card">
        <div class="card-content">
            <span class="card-title blue-text text-darken-2">Crear Categoria</span>

    <form asp-action="Create" class="col s12">
        <div class="input-field">
            <input asp-for="Nombre" id="nombre" type="text" class="validate" />
            <label for="nombre">Nombre</label>
            <span asp-validation-for="Nombre" class="red-text text-darken-1"></span>
        </div>

        <div class="input-field">
            <input name="FechaCreacion" id="fechaCreacion" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
            <label for="fechaCreacion">Fecha de Creación</label>
        </div>

        <button type="submit" class="btn blue darken-2">Guardar</button>
    </form>
        </div>
    </div>
</div>